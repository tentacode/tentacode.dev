{% macro strength(title, description, icon_class) %}
    <div class="col-lg-4">
        <div class="features mx-auto mb-4">
            <div class="big-icon mb-3 d-flex">
                <i class="m-auto {{ icon_class }} text-pink"></i>
            </div>
            <h3>{{ title }}</h3>
            <p style="color: #DDD; font-size: 1.1rem" class="lead mb-0">{{ description|raw }}</p>
        </div>
    </div>
{% endmacro %}

