<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ url('landing') }}</loc>
        <priority>1</priority>
    </url>
    <url>
        <loc>{{ url('blog_list') }}</loc>
        <priority>0.9</priority>
    </url>
    {% for post in posts %}
        <url>
            <loc>{{ url('blog_detail', {'slug': post.slug}) }}</loc>
            {# last three blog posts have more priority #}
            {% if loop.index < 4 %}
                <priority>0.8</priority>
            {% else %}
                <priority>0.7</priority>
            {% endif %}
        </url>
    {% endfor %}
</urlset>