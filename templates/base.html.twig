<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
        <meta content="{% block description %}Hello! My name is Gabriel Pillet and I work for Yousign as their QA Lead.{% endblock %}" name="description">
        <meta content="Gabriel Pillet" name="author">
        <meta name="robots" content="index, follow">
        <link rel="canonical" href="{{ url('landing') }}" />
        <link rel="alternate" type="application/rss+xml" title="RSS feed my blog" href="{{ url('blog_feed', {'_format': 'xml'}) }}" />
        <title>{% block title %}@tentacode - Gabriel Pillet, QA Lead for Yousign{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('startbootstrap-freelancer/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
            <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
            <link
            href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
            <link href="{{ asset('startbootstrap-freelancer/css/freelancer.min.css') }}" rel="stylesheet">
            <link href="{{ asset('css/tentacode.dev.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}

        {% block meta_og %}
            <meta property="og:url" content="{{ app.request.uri }}" />
            <meta property="og:type" content="{% block og_type 'website' %}" />
            <meta property="og:title" content="{% block og_title %}Hello there!{% endblock %}" />
            <meta property="og:description" content="{% block og_description %}My name is Gabriel Pillet and I work for Yousign as their QA Lead.{% endblock %}" />
            <meta property="og:image" content="{% block og_image %}{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('img/twitter_card.png') }}{% endblock %}" />
            <meta property="og:image:width" content="1200" />
            <meta property="og:image:height" content="628" />
        {% endblock %}

        {% block twitter_card %}
            <meta name="twitter:card" content="{% block twitter_card_type 'summary_large_image' %}">
            <meta name="twitter:site" content="@tentacode">
            <meta name="twitter:creator" content="@tentacode">
            <meta name="twitter:title" content="{{ block('og_title') }}">
            <meta name="twitter:description" content="{{ block('og_description') }}">
            <meta name="twitter:image" content="{{ block('og_image') }}">
        {% endblock %}
    </head>
    <body id="top">
        {% block navigation %}
            {% include '_navigation.html.twig' %}
        {% endblock %}

        {% block body '' %}

        {% block footer %}
            {% include '_footer.html.twig' %}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('startbootstrap-freelancer/vendor/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('startbootstrap-freelancer/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('startbootstrap-freelancer/vendor/jquery-easing/jquery.easing.min.js') }}"></script>
            <script src="{{ asset('startbootstrap-freelancer/js/freelancer.min.js') }}"></script>
            
            <!-- Matomo -->
            <script type="text/javascript">
                var _paq = window._paq || [];
                /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
                _paq.push(['trackPageView']);
                _paq.push(['enableLinkTracking']);
                (function() {
                    var u="//tentacode.dev/matomo/";
                    _paq.push(['setTrackerUrl', u+'matomo.php']);
                    _paq.push(['setSiteId', '1']);
                    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
                    g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
                })();
            </script>
            <!-- End Matomo Code -->
        {% endblock %}
    </body>
</html>
